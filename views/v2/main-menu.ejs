<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes, viewport-fit=cover">
    <title>🚀 Development Tools - Vue Version</title>
    
    <!-- External CSS Files -->
    <link rel="stylesheet" href="/static/css/main.css">
    <link rel="stylesheet" href="/static/css/components/version-selector.css">
    <link rel="stylesheet" href="/static/css/components/menu-grid.css">
    <link rel="stylesheet" href="/static/css/components/vue-badge.css">
    <link rel="stylesheet" href="/static/css/components/debug-info.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>🚀 Development Tools <span class="vue-badge">Vue.js v2</span></h1>
            <p>Bot Instance: <strong><%= botInstance %></strong></p>
            
            <div class="version-selector">
                <h3>🧪 Version Selector</h3>
                <div class="version-buttons">
                    <a href="/" class="version-btn current">📄 Current Version</a>
                    <a href="/v2" class="version-btn vue">🚀 Vue Version</a>
                </div>
            </div>
        </div>
        
        <div class="debug-info">
            <strong>🔧 Debug Info:</strong><br>
            Vue.js Version: v2 | Status: Active | Routes: All configured
        </div>
        
        <div class="menu-grid">
            <a href="/v2/files" class="menu-item">
                <span class="menu-icon">📁</span>
                <div class="menu-title">File Browser</div>
                <div class="menu-desc">Browse and view project files with Vue.js reactivity</div>
            </a>
            
            <a href="/v2/git" class="menu-item git">
                <span class="menu-icon">🔍</span>
                <div class="menu-title">Git Diff Viewer</div>
                <div class="menu-desc">View git changes with Vue.js enhanced interface</div>
            </a>
            
            <a href="/v2/info" class="menu-item info">
                <span class="menu-icon">ℹ️</span>
                <div class="menu-title">QTunnel Info</div>
                <div class="menu-desc">Vue.js powered tunnel status dashboard</div>
            </a>
        </div>
    </div>
    
    <!-- Simple JavaScript without Vue for now -->
    <script>
        console.log('Vue.js main menu loaded successfully');
        
        // Simple token management
        function getTokenFromUrl() {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get('token');
        }
        
        function addTokenToLinks() {
            const token = getTokenFromUrl();
            if (token) {
                const links = document.querySelectorAll('a[href^="/v2"]');
                links.forEach(link => {
                    const url = new URL(link.href, window.location.origin);
                    if (!url.searchParams.has('token')) {
                        url.searchParams.set('token', token);
                        link.href = url.toString();
                    }
                });
            }
        }
        
        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', function() {
            addTokenToLinks();
            console.log('Token management initialized');
        });
    </script>
</body>
</html>